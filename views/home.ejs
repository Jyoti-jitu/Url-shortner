<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener Dashboard</title>

    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f6f9;
        color: #333;
      }

      header {
        color: #fff;
        padding: 10px;
        text-align: center;
        font-size: 1.8rem;
        font-weight: 600;
      }
      /* Navbar */
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #2563eb;
        color: #fff;
        padding: 12px 20px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }

      .navbar-left {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        font-size: 1.1rem;
      }

      .user-logo {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #fff;
        color: #2563eb;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        font-size: 1rem;
      }

      .logout-btn {
        background: #fff;
        color: #2563eb;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: 0.3s;
      }

      .logout-btn:hover {
        background: #e0e7ff;
      }

      main {
        max-width: 900px;
        margin: 30px auto;
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      }

      h2 {
        margin-bottom: 15px;
        font-size: 1.4rem;
        color: #1e3a8a;
      }

      /* Form */
      form {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 30px;
      }

      form label {
        flex-basis: 100%;
        font-weight: 500;
        margin-bottom: 8px;
      }

      input[type="text"] {
        flex: 1;
        padding: 10px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
        outline: none;
        transition: 0.3s;
      }

      input[type="text"]:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
      }

      button {
        background: #2563eb;
        color: #fff;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
      }

      button:hover {
        background: #1e40af;
      }

      /* Generated URL */
      .generated-url {
        background: #f0f9ff;
        border: 1px solid #bae6fd;
        color: #0369a1;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 25px;
        font-weight: 500;
      }

      /* Table */
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
      }

      table th,
      table td {
        border: 1px solid #e2e8f0;
        padding: 12px 15px;
        text-align: center;
      }

      table th {
        background: #2563eb;
        color: white;
        font-weight: 600;
      }

      table tr:nth-child(even) {
        background: #f9fafb;
      }

      table tr:hover {
        background: #f1f5f9;
      }

      @media (max-width: 600px) {
        form {
          flex-direction: column;
        }
        input[type="text"],
        button {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <div class="navbar">
      <div class="navbar-left">
        <div class="user-logo"><%= ( "🍁")%></div>
        <span><%= locals.username || "Guest User" %></span>
      </div>
      <header>URL Shortener Dashboard</header>
      <form action="/user/login" method="POST" style="margin: 0">
        <button class="logout-btn" type="submit">Logout</button>
      </form>
    </div>

    <main>
      <% if (locals.id) { %>
      <div class="generated-url">
        ✅ URL Generated:
        <a href="http://jitu.qzz.io/url/<%= id %>" target="_blank">
          http://jitu.qzz.io/url/<%= id %>
        </a>
      </div>
      <% } %>

      <h2>Generate a Short URL</h2>
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label>
        <input
          type="text"
          name="url"
          placeholder="https://example.com"
          required
        />
        <button type="submit">Generate</button>
      </form>

      <% if (locals.urls) { %>
      <h2>Your Shortened URLs</h2>
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>URL Generated</th>
            <th>Short ID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a
                href="http://jitu.qzz.io/url/<%= url.shortId %>"
                target="_blank"
                >http://jitu.qzz.io/url/<%= url.shortId %></a
              >
            </td>
            <td><%= url.shortId %></td>
            <td>
              <b><%= url.redirectURL %></b>
            </td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </main>
  </body>
</html>
